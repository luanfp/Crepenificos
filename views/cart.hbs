<div class="header">

  <div style="position: absolute; width: 160px; height: 160px; right: 20px; top: 0px;">
  {{#if scanQrCode}}
  <video id="preview" width="160" height="160"></video>
  <script type="text/javascript">
    let scanner = new Instascan.Scanner({ video: document.getElementById('preview'), backgroundScan: true, refractoryPeriod: 2000, });
    scanner.addListener('scan', function (content) {
      console.log(content);
      add(content);
    });
    Instascan.Camera.getCameras().then(function (cameras) {
      if (cameras.length > 0) {
        scanner.start(cameras[0]);
      } else {
        console.error('No cameras found.');
      }
    }).catch(function (e) {
      console.error(e);
    });
  </script>
  {{/if}}
